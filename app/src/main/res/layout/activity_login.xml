<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userlogin"
            type="com.chann.crystalshineproject.data.UserLogin" />
    </data>

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.crystalshine.activity.LoginActivity" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include
                layout="@layout/content_banner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/ph"
                        android:layout_width="240dp"
                        android:layout_height="48dp"
                        android:hint="@string/hint_ph_no"
                        android:background="@drawable/bg_login_btn_rounded"
                        android:inputType="phone"
                        android:imeOptions="actionNext"
                        android:paddingLeft="15dp"
                        android:textColor="@color/grey_dark"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/pwd"
                        android:layout_width="240dp"
                        android:layout_height="48dp"
                        android:hint="@string/hint_pwd"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_login_btn_rounded"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:textColor="@color/grey_dark"
                        android:textSize="14sp" />


                    <Button
                        style="@style/MyBtnStyle"
                        android:layout_width="@dimen/view_width"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xl"
                        android:background="@drawable/bg_login_btn_round"
                        android:fontFamily="sans-serif"
                        android:onClick="onLogin"
                        android:text="@string/label_login"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        app:cornerRadius="24dp"
                        android:textSize="16dp" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>
</layout>